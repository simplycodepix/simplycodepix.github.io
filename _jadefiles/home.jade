.page-holder.home
	{% for post in site.posts limit: 1 %}
	section.home-featured(style="background-image: url(assets/img/gallery_images/{{post.thumbnail}})")
		.page-container
			h2.home-featured--title: a(href="{{post.url}}") {{post.title}}
			p.home-featured--excerpt {{post.excerpt}}
			a(href="http://{{post.url}}" target="_blank").home-featured--cta.page-cta Preview
			a(href="http://{{post.downloadlink}}").templates-item--cta.page-cta.colored {{post.buttontext}}
	{%  endfor  %}

	


















